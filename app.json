{
  "id": "com.athom.flowchecker",
  "version": "1.0.0",
  "compatibility": ">=5.0.0",
  "sdk": 3,
  "permissions": [
    "homey:manager:api"
  ],
  "brandColor": "#000000",
  "name": {
    "en": "Flow Checker",
    "nl": "Flow Checker"
  },
  "description": {
    "en": "Get insight in you Homey Flows",
    "nl": "Krijg info over je Homey Flows"
  },
  "category": [
    "tools"
  ],
  "images": {
    "xlarge": "/assets/images/xlarge.png",
    "large": "/assets/images/large.png",
    "small": "/assets/images/small.png"
  },
