  "api": {
    "settings": {
      "method": "put",
      "path": "/settings/"
    }
  },
  "flow": {
    "triggers": [
      {
        "id": "trigger_BROKEN",
        "title": {
          "en": "A flow broke down",
          "nl": "Een flow is kapot gegaan"
        },
        "tokens": [
          {
            "name": "flow",
            "type": "string",
            "title": {
              "en": "Flow",
              "nl": "Flow"
            }
          },
          {
            "name": "id",
            "type": "string",
            "title": {
              "en": "ID",
              "nl": "ID"
            }
          }
        ]
      },
      {
        "id": "trigger_DISABLED",
        "title": {
          "en": "A flow is disabled",
          "nl": "Een flow is uitgezet"
        },
        "tokens": [
          {
            "name": "flow",
            "type": "string",
            "title": {
              "en": "Flow",
              "nl": "Flow"
            }
          }
        ]
      }
    ],
    "actions": [
      {
        "id": "action_reboot_flow",
        "title": {
          "en": "Reboot",
          "nl": "Herstarten"
        },
        "titleFormatted": {
          "en": "[[device]] Reboot",
          "nl": "[[device]] Herstarten"
        },
        "args": [
          {
            "type": "device",
            "name": "device",
            "filter": "capabilities=action_reboot"
          }
        ]
      }
    ]
  }
}